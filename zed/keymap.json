[
    {
        "context": "Editor",
        "bindings": {
            "ctrl-alt-up": "editor::DuplicateLineUp",
            "ctrl-alt-down": "editor::DuplicateLineDown",
            "ctrl-u": "editor::DeleteToBeginningOfLine",
            "ctrl-k": "editor::DeleteToEndOfLine",
            "ctrl-shift-t": "workspace::NewTerminal",
            "ctrl-i": "editor::ToggleInlayHints"
        }
    },
    {
        "context": "Editor && extension == py",
        "bindings": {
            "ctrl-r": ["task::Spawn", { "task_name": "Python uses: run" }]
        }
    },
    {
        "context": "Editor && extension == go",
        "bindings": {
            "ctrl-r": ["task::Spawn", { "task_name": "Go: run" }]
        }
    },
    {
        "context": "Terminal",
        "bindings": {
            "ctrl-n": ["terminal::SendKeystroke", "ctrl-n"]
        }
    }
]
