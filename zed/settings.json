{
    // === UI & Editor Appearance ===
    "confirm_quit": true,
    "ui_font_weight": 510.0,
    "ui_font_family": ".SystemUIFont",
    "theme": "Gruvbox Light Hard",
    "buffer_font_family": "Fira Code",
    "buffer_font_features": {
        "calt": true
    },
    "buffer_font_size": 15.0,
    "buffer_line_height": "comfortable",
    "buffer_font_weight": 500.0,
    "cursor_blink": true,
    "cursor_shape": "bar",
    "icon_theme": "VSCode Icons (Light)",
    "project_panel": {
        "dock": "left",
        "drag_and_drop": false,
        "file_icons": true,
        "folder_icons": true,
        "starts_open": true,
        "sticky_scroll": true
    },
    "rounded_selection": true,
    "scroll_beyond_last_line": "off",
    "scrollbar": {
        "show": "always"
    },
    "show_whitespaces": "selection",
    "show_wrap_guides": true,
    // "soft_wrap": "preferred_line_length",
    "tab_size": 4,
    "hard_tabs": false,

    "ui_font_size": 17.0,
    "vertical_scroll_margin": 3,
    "wrap_guides": [72, 79],

    // === Themes & Colors ===
    "experimental.theme_overrides": {
        "syntax": {
            "keyword": { "color": "#9D70FF" },
            "function": {
                // "color": "#BCBEC4",
                "font_weight": 600
            },
            "comment": {
                "color": "#BCBEC4"
            },
            "comment.doc": {
                "color": "#BCBEC4"
            }
        }
    },

    // === Editing Behavior ===
    "ensure_final_newline_on_save": true,
    "format_on_save": "on",
    "inlay_hints": {
        "enabled": true,
        "toggle_on_modifiers_press": {
            "control": false,
            "alt": true
        }
    },
    "remove_trailing_whitespace_on_save": true,

    // === Mouse & Navigation ===
    "hide_mouse": "on_typing_and_movement",
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "tab_bar": {
        "show": true
    },
    "tabs": {
        "show_diagnostics": "all",
        "file_icons": true,
        "git_status": true
    },

    // === Git Integration ===
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": true
        }
    },

    // === Terminal ===
    "terminal": {
        "font_family": "Consolas",
        "font_size": 14,
        "blinking": "on",
        "cursor_shape": "underline",
        "shell": {
            "program": "zsh"
        }
    },

    // === File Handling ===
    "autosave": "on_focus_change",
    "file_scan_exclusions": [
        "**/*.pyc",
        "**/.coverage",
        "**/.directory",
        "**/.DS_Store",
        "**/.git",
        "**/.hg",
        "**/.noseids",
        "**/.pytest_cache",
        "**/.svn",
        "**/__pycache__",
        "**/__marimo__",
        "**/bin",
        "**/celerybeat-schedule",
        "**/cover",
        "**/pg",
        "*.egg-info",
        "*.sublime-project",
        "*.sublime-workspace",
        ".skjold_cache",
        "env",
        "env3",
        "htmlcov",
        "include",
        "log",
        "man",
        "pip-selfcheck.json",
        "project",
        "share",
        "test_*.sqlite3"
    ],

    // === File Associations ===
    "file_types": {
        "JSON": ["partial", "schema", "ui.schema"],
        "TOML": ["toml"]
    },

    // === Language-specific Settings ===
    "languages": {
        "JSON": {
            "tab_size": 4
        },
        "JSONC": {
            "tab_size": 4
        },
        "Python": {
            "format_on_save": "on",
            "formatter": [
                {
                    "code_action": "source.fixAll"
                },
                {
                    "code_action": "source.organizeImports"
                },
                {
                    "code_action": "source.fixAll.ruff"
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                },
                {
                    "external": {
                        "command": "ruff",
                        "arguments": ["format", "--line-length", "79", "-"]
                    }
                }
            ],
            "hard_tabs": false,
            "language_servers": ["ty", "ruff", "!basedpyright"],
            "preferred_line_length": 79,
            "tab_size": 4
        },
        "Rust": {
            "formatter": {
                "external": {
                    "command": "rustfmt",
                    "arguments": []
                }
            },
            "format_on_save": "on"
        }
    },

    // === LSP Settings ===
    "lsp": {
        "ruff": {
            "initialization_options": {
                "settings": {
                    "lint": {
                        "select": ["ALL"]
                    }
                }
            }
        }
    }
}
